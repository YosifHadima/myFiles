<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
android:id="@+id/scrollView"
    >
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <View
            android:id="@+id/view_blank"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:background="@color/colorPrimary"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"/>

        <ImageView
            android:id="@+id/image_logo"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginTop="60dp"
            android:src="@drawable/facebook"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:visibility="invisible"/>


        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/credentials_card"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:padding="@dimen/spacing_mlarge"
            app:layout_constraintTop_toBottomOf="@+id/image_logo"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent">


            <androidx.cardview.widget.CardView
                android:id="@+id/profile_view_id"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/spacing_medium"
                android:visibility="visible"
                app:cardCornerRadius="6dp"
                app:cardElevation="5dp"
                app:cardUseCompatPadding="true"
                tools:ignore="MissingConstraints"

                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
android:gravity="center"
                    android:padding="32dp">

                    <TextView
                        android:id="@+id/StoreName_id"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginBottom="4dp"
                        android:paddingTop="60dp"
                        android:text="Store Name"

                        android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
                        android:textColor="@color/colorAccent"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/BusinessName_id"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginBottom="8dp"

                        android:text="Bussniss Name"
                        android:textAllCaps="true"

                        android:textColor="@color/colorAccent" />

                    <LinearLayout
                        android:id="@+id/myviwes"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:paddingBottom="8dp"
                        android:gravity="center">

                        <ImageView

                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_weight="0"

                            app:srcCompat="@drawable/eye" />

                        <TextView
                            android:id="@+id/counter_id"
                            android:paddingLeft="6dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="0"
                            android:text="0"
                            android:textColor="@color/colorAccent"
                            android:textStyle="bold" />


                    </LinearLayout>

                    <com.beardedhen.androidbootstrap.BootstrapButton
                        android:id="@+id/status_id"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:layout_marginBottom="4dp"
                        app:bootstrapBrand="success"
                        app:bootstrapSize="sm"
                        app:buttonMode="regular"
                        app:roundedCorners="true" />
                    <ProgressBar
                        android:id="@+id/progressBar"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:visibility="gone" />

                    <TextView
                        android:id="@+id/textCounter_id"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Valid from 1/9/2023 until 9/9/2023 \n6 days to renew"
                        android:textAlignment="center"
                        android:textColor="@color/colorAccent"
                        android:visibility="gone" />


                </LinearLayout>

            </androidx.cardview.widget.CardView>




        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.cardview.widget.CardView
            android:id="@+id/Description2_Id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/status_comment_parent_id"
            android:layout_marginRight="16dp"
            android:layout_marginLeft="16dp"
            app:cardElevation="4dp"
            app:cardCornerRadius="8dp"
            android:layout_marginTop="16dp"

            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="8dp"
                    android:id="@+id/mystoreimageandDesc"
                    android:layoutDirection="ltr"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:layoutDirection="ltr">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal"
                            android:layoutDirection="ltr">

                            <TextView
                                android:id="@+id/Textdescription_id"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:gravity="left"
                                android:text="@string/description"
                                android:textSize="16sp"
                                android:textStyle="bold" />

                            <ImageView
                                android:id="@+id/editeDescription_id"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:visibility="gone"
                                app:srcCompat="@android:drawable/ic_menu_upload" />
                        </LinearLayout>

                        <TextView
                            android:id="@+id/Description_Id"
                            android:layout_width="match_parent"
                            android:layout_height="80dp" />
                    </LinearLayout>

                    <TextView
                        android:id="@+id/Textstore_images"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="left"
                        android:paddingBottom="16dp"
                        android:text="@string/store_images"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <HorizontalScrollView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <LinearLayout
                            android:id="@+id/imageLayout"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layoutDirection="ltr"/>
                    </HorizontalScrollView>
                </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/contact_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="16dp"
            android:layout_marginLeft="16dp"
            app:cardElevation="4dp"
            app:cardCornerRadius="8dp"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@id/Description2_Id">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="8dp"
                android:layoutDirection="ltr"
                android:id="@+id/allcontactid"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="0"
                    android:gravity="right"
                    android:orientation="horizontal"
                    android:layoutDirection="ltr">

                    <TextView
                        android:id="@+id/Textcontact_information"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="left"
                        android:text="@string/contact_information"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <ImageView
                        android:id="@+id/changecontact_id"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="0"
                        android:clickable="true"
                        android:onClick="onContactImageClicked"
                        android:visibility="gone"
                        app:srcCompat="@android:drawable/ic_menu_upload" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="0"
                    android:orientation="horizontal"
                    android:layoutDirection="ltr"
                    android:onClick="onCallImageClicked">

                    <ImageView
                        android:id="@+id/imageView44"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_weight="0"

                        app:srcCompat="@drawable/call" />

                    <TextView
                        android:id="@+id/phoneNumer_id"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center|left"

                        android:paddingLeft="14dp"
                        android:textSize="16sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layoutDirection="ltr"
                    android:orientation="horizontal"
                    android:paddingTop="4dp"
                    android:onClick="onFacebookImageClicked">

                    <ImageView
                        android:id="@+id/facebookimageView_id"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_weight="0"

                        app:srcCompat="@drawable/face" />

                    <TextView
                        android:id="@+id/facebookLink_id"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="0"
                        android:paddingLeft="14dp"
                        android:gravity="center|left" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="4dp"
                    android:layout_weight="0"
                    android:layoutDirection="ltr"
                    android:orientation="horizontal"
                    android:onClick="onInstgramImageClicked">

                    <ImageView
                        android:id="@+id/instgramimageView_id"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_weight="0"



                        app:srcCompat="@drawable/link" />

                    <TextView
                        android:id="@+id/linkdinLink_id"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="0"
                        android:paddingLeft="14dp"
                        android:gravity="center|left" />
                </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/status_comment_parent_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="16dp"
            android:layout_marginLeft="16dp"
            app:cardElevation="4dp"
            app:cardCornerRadius="8dp"

            app:layout_constraintTop_toBottomOf="@id/credentials_card">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:visibility="gone">

                <com.beardedhen.androidbootstrap.BootstrapButton
                    android:id="@+id/status_comment_id"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:text="Need correction"
                    app:bootstrapBrand="danger"
                    app:bootstrapSize="sm"
                    app:showOutline="true"
                    app:buttonMode="regular"
                    app:roundedCorners="false"
                    />
            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <com.mikhaellopez.circularimageview.CircularImageView

            android:id="@+id/profileImageView"
            android:onClick="onProfileImageClicked"
            android:layout_width="150dp"
            android:layout_height="150dp"

            app:civ_border_color="#FDFEFF"
            app:civ_border_width="2dp"
            app:civ_shadow="true"
            app:civ_shadow_radius="5dp"
            app:civ_shadow_color="#3f51b5"

            android:src="@drawable/common_google_signin_btn_icon_dark"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="40dp"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@id/contact_id">

            <Button
                android:id="@+id/payButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="14dp"
                android:layout_marginRight="14dp"
                android:backgroundTint="@color/colorPrimary"
                android:text="@string/publish"
                android:textSize="16sp"
                android:visibility="gone" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:id="@+id/Activation"
                android:visibility="gone">

                <Button
                    android:id="@+id/buttonYes"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="ok" />

                <Button
                    android:id="@+id/buttonNo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Correction" />
                <Button
                    android:id="@+id/buttonCancel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="x" />
            </LinearLayout>
        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>




</ScrollView>