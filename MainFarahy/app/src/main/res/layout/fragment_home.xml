<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F2F2F2"
    tools:context=".ui.home.HomeFragment">

    <TextView
        android:id="@+id/text_home"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:textAlignment="center"
        android:textSize="20sp"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingLeft="8dp"
        android:paddingTop="8dp"
        android:paddingRight="8dp">

        <!-- Custom ExpandableListView -->

        <EditText
            android:visibility="gone"
            android:id="@+id/etSearch"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <LinearLayout
            android:paddingTop="@dimen/_8sdp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <com.beardedhen.androidbootstrap.BootstrapButton
                    android:id="@+id/makeup_id"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="makeup artist"
                    app:bootstrapBrand="success"
                    app:bootstrapSize="md"
                    app:buttonMode="regular"
                    app:roundedCorners="true"
                    app:showOutline="true"
                    />

                <com.beardedhen.androidbootstrap.BootstrapButton
                    android:id="@+id/weddingPlanner_id"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="wedding planner"
                    app:bootstrapBrand="success"
                    app:bootstrapSize="md"
                    app:buttonMode="regular"
                    app:roundedCorners="true"
                    android:layout_marginLeft="@dimen/_8sdp"
                    app:showOutline="true" />

                <com.beardedhen.androidbootstrap.BootstrapButton
                    android:id="@+id/hairStylist_id"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="hair stylist"
                    app:bootstrapBrand="success"
                    app:bootstrapSize="md"
                    app:buttonMode="regular"
                    app:roundedCorners="true"
                    android:layout_marginLeft="@dimen/_8sdp"
                    app:showOutline="true" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:paddingTop="@dimen/_6sdp"
               >

                <com.beardedhen.androidbootstrap.BootstrapButton
                    android:id="@+id/weddingvenue_id"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="wedding venue"
                    app:bootstrapBrand="success"
                    app:bootstrapSize="md"
                    app:buttonMode="regular"
                    app:roundedCorners="true"
                    app:showOutline="true"
                    />

                <com.beardedhen.androidbootstrap.BootstrapButton
                    android:id="@+id/athelier_id"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="athelier"
                    app:bootstrapBrand="success"
                    app:bootstrapSize="md"
                    app:buttonMode="regular"
                    app:roundedCorners="true"
                    android:layout_marginLeft="@dimen/_8sdp"
                    app:showOutline="true" />

                <com.beardedhen.androidbootstrap.BootstrapButton
                    android:id="@+id/veildesigner_id"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="veil designer"
                    app:bootstrapBrand="success"
                    app:bootstrapSize="md"
                    app:buttonMode="regular"
                    app:roundedCorners="true"
                    android:layout_marginLeft="@dimen/_8sdp"
                    app:showOutline="true" />




            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:paddingTop="@dimen/_6sdp"
                >
            <com.beardedhen.androidbootstrap.BootstrapButton
                android:id="@+id/videographer_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="video grapher"
                app:bootstrapBrand="success"
                app:bootstrapSize="md"
                app:buttonMode="regular"
                app:roundedCorners="true"

                app:showOutline="true" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">

            <ProgressBar
                android:id="@+id/progressBar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:visibility="gone" />
        </LinearLayout>

        <ExpandableListView
            android:paddingTop="@dimen/_8sdp"
            android:id="@+id/expandableListView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:divider="@android:color/darker_gray"

            android:dividerHeight="0dp"
            android:footerDividersEnabled="false"
            android:groupIndicator="@null" />

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>